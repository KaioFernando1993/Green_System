<mvc:View controllerName="application.controller.Opinions"
    xmlns:micro="sap.suite.ui.microchart"
    xmlns:main="sap.ui.webc.main"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    width="100%">
<Page title="{i18n>titleOpnions}">
        <HBox justifyContent="SpaceBetween">
            <!-- Header -->
            <VBox backgroundDesign="Solid" class="sapUiTinyMargin sapVboxBorder" width="90%">
                <Title class="sapUiSmallMargin" text="{i18n>opBlockedCustomers}"/>
                <TileContent >
                    <content>
                        <Title level="H1" text="21" class="customTitleClass"/>
                    </content>
                </TileContent>
            </VBox>

            <VBox backgroundDesign="Solid" class="sapUiTinyMargin sapVboxBorder" width="90%">
                <Title class="sapUiSmallMargin"  text="{i18n>opOpenLookin}"/>
                <TileContent >
                    <content>
                        <Title level="H1" text="24" class="customTitleClass"/>
                    </content>
                </TileContent>
            </VBox>

            <VBox backgroundDesign="Solid" class="sapUiTinyMargin sapVboxBorder" width="100%">
                <Title  class="sapUiSmallMargin" text="{i18n>opStatusBp}"/> 
                    <TileContent>
                        <content>
                            <FlexBox width="15rem" height="8rem" >
                                <items>
                                    <micro:InteractiveDonutChart class="graficoComCorCustom1" selectionChanged="onSelectionChanged">
                                        <micro:segments>
                                            <micro:InteractiveDonutChartSegment label="{i18n>opAccording}" value="75.0" displayedValue="75.0%" />
                                            <micro:InteractiveDonutChartSegment label="{i18n>opNoConforming}" value="25" displayedValue="25.0%"/>
                                        </micro:segments>
                                    </micro:InteractiveDonutChart>
                                </items>
                            </FlexBox>
                        </content>
                    </TileContent>
            </VBox>
   
            <VBox backgroundDesign="Solid" class="sapUiTinyMargin sapVboxBorder" width="100%">
                <Title class="sapUiSmallMargin"  text="{i18n>opStatusOpinions}" />
                <TileContent>
                    <content>
                        <FlexBox width="15rem" height="8rem">
                            <items>
                                <micro:InteractiveDonutChart selectionChanged="onSelectionChanged">
                                    <micro:segments>
                                        <micro:InteractiveDonutChartSegment label="{i18n>opAccording}" value="100.0" displayedValue="100.0%"/>
                                        <micro:InteractiveDonutChartSegment label="{i18n>opNoConforming}" value="0" displayedValue="0.0%"/>
                                    </micro:segments>
                                </micro:InteractiveDonutChart>
                            </items>
                        </FlexBox>
                    </content>
                </TileContent>
            </VBox>
        </HBox>
    <!-- Tabela -->
    <Panel class="sapUiTinyMargin ">
        <Table id="myOpTable" items="{visibleModel/Filter}" width="100%">
            <columns>
               <Column width="5rem">
                  <Label text="{i18n>opDate}"/>
               </Column>
               <Column width="11rem">
                  <Label text="{i18n>opDateOpinionsRegister}"/>
               </Column>
               <Column>
                  <Label text="{i18n>opBpSAP}"/>
               </Column>
               <Column>
                  <Label text="{i18n>opDocument}"/>
               </Column>
               <Column>
                  <Label text="{i18n>opName}"/>
               </Column>
               <Column>
                  <Label text="{i18n>opCountry}"/>
               </Column>
               <Column>
                  <Label text="{i18n>opStatusBp}"/>
               </Column>
               <Column>
                  <Label text="{i18n>opNOpinions}"/>
               </Column>
               <Column>
                <Label text="{i18n>opOpnions}"/>
             </Column>
             <Column width="9rem">
                <Label text="{i18n>opOpinionsAnex}"/>
             </Column>
             <Column>
                <Label/><!-- coluna para checkbox-->
             </Column>
            </columns>
            <items>
               <ColumnListItem >
                  <cells width="100%">
                     <Text text=""/>
                     <Text text="{/}"/>
                     <Text text="{/}"/>
                     <Text text="{/}"/>
                     <Text text="{/}"/>
                     <Text text="{/}"/>
                     <main:Badge text="{/}" colorScheme="5" /> <!-- 5 ou -->
                     <Text text="{/}" />
                     <main:Badge text="{/}" colorScheme="6" /><!-- 6 ou 1-->
                     <Link text="{document.pdf}" icon="sap-icon://activity-2"/>
                     <CheckBox  change="handleChange" />
                    </cells>
                </ColumnListItem>
            </items>
         </Table>
    </Panel>
    <footer>
        <Bar>
            <contentRight>
            <Button 
                text="{i18n>opDownloadSelect}" 
                icon="sap-icon://download" 
                type="Emphasized" 
                press="onEscapePreventDialogPress" 
                ariaHasPopup="Dialog"/>
            </contentRight>
        </Bar>
    </footer>
</Page>
</mvc:View>